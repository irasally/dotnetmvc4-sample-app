@model SportsStore.WebUI.Models.ProductsListViewModel

@{
    ViewBag.Title = "Products";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        @foreach (var p in Model.Products)
        {
            <div class="item">
                <h3>@p.Name</h3>
                @p.Description
                <h4>@p.Price.ToString("c")</h4>
            </div>
        }
    </div>
</body>
</html>
